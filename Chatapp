import React from "react";
import { useNavigate } from "react-router-dom";

const ChatUtil = () => {
  const navigate = useNavigate();

  const handleCreateGroupClick = () => {
    navigate("/Group");
  };

  return (
    <div>
      <button
        onClick={handleCreateGroupClick}
        style={{
          width: "50px",
          height: "50px",
          borderRadius: "50%",
          backgroundColor: "#007bff",
          color: "#fff",
          border: "none",
          cursor: "pointer",
        }}
      >
        Create Group
      </button>
    </div>
  );
};

export default ChatUtil;
